<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/framlayout_background"
        android:layout_above="@+id/linearLayout">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blackE"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/tab_shouye"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab1"
                android:src="@drawable/tab_shouye1"
                android:layout_width="match_parent"
                android:layout_height="35dp"></ImageView>
            <TextView
                android:id="@+id/tv_tab1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="首页"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_weitao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab2"
                android:src="@drawable/tab_weitao1"
                android:layout_width="match_parent"
                android:layout_height="35dp"></ImageView>
            <TextView
                android:id="@+id/tv_tab2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="微淘"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_xiaoxi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab3"
                android:src="@drawable/tab_xiaoxi1"
                android:layout_width="match_parent"
                android:layout_height="35dp"></ImageView>
            <TextView
                android:id="@+id/tv_tab3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="消息"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_gouwuche"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab4"
                android:src="@drawable/tab_gouwuche1"
                android:layout_width="match_parent"
                android:layout_height="35dp"></ImageView>
            <TextView
                android:id="@+id/tv_tab4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="购物车"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_wodetb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab5"
                android:src="@drawable/tab_wodetb1"
                android:layout_width="match_parent"
                android:layout_height="35dp"></ImageView>
            <TextView
                android:id="@+id/tv_tab5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="我的淘宝"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="center"></TextView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
