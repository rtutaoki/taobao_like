<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blackE">

    <LinearLayout
        android:id="@+id/xiaoxi_l1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="消息"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:gravity="clip_vertical"/>
        <Button
            android:id="@+id/xiaoxi_btn_sousuo"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_yuanjiao"
            android:hint="搜索"
            android:gravity="center_vertical"
            android:textColorHint="@color/black"/>
        <ImageButton
            android:id="@+id/xiaoxi_btn_haoyou"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/people_list"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/xiaoxi_btn_add"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/add"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xiaoxi_l2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/xiaoxi_tv_xiaoxi_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="没有未读消息"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/xiaoxi_tv_xiaoxi_qingchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清除未读"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xiaoxi_l3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_yuanjiao"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/wuliu"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="交易物流"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/youhui"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="活动优惠"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xiaoxi_l4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="无历史消息"
            android:textSize="24dp"/>
    </LinearLayout>

</LinearLayout>
